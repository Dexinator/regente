---
const title = Astro.props.title || "Sistema de Gestión - El Palacio Negro";
import Logo from "../assets/icons/logo.astro";
import "../styles/global.css"; // ✅ Importar Tailwind
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content="Sistema de Gestión para El Palacio Negro" />
    <meta name="author" content="El Palacio Negro" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="src/styles/global.css" />
  </head>
  <body class="bg-[#721422] text-white">
    <header class="p-4 bg-[#DC9D00] text-black text-center font-bold text-lg flex justify-center items-center">
      <div class="w-32 h-32 flex items-center justify-center">
        <Logo class="w-full h-full max-w-[120px] max-h-[120px]" />
      </div>
    </header>
    

    <main class="p-4">
      <slot />
    </main>

    <footer class="p-4 bg-[#DC9D00] text-black text-center text-sm">
      © {new Date().getFullYear()} El Palacio Negro - Todos los derechos reservados.
    </footer>
  </body>
</html>
